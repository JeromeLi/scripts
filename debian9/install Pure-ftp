sudo apt install pure-ftpd -y
sudo groupadd ftpgroup
sudo useradd -g ftpgroup -d /dev/null -s /etc ftpuser
sudo echo -e "pass\n12345\n" | sudo passwd ftpuser
sudo mkdir /home/ftpuser/
sudo chown -R ftpuser:ftpgroup /home/ftpuser
sudo ln -s /etc/pure-ftpd/conf/PureDB /etc/pure-ftpd/auth/50pure
sudo mkdir /home/ftpuser/test
sudo chown -R ftpuser:ftpgroup /home/ftpuser/test
sudo pure-pw useradd test -u ftpuser -d /home/ftpuser/test
sudo echo "60000 60010" > /etc/pure-ftpd/conf/PassivePortRange
sudo echo "yes" > /etc/pure-ftpd/conf/IPV4Only
sudo echo "yes" > /etc/pure-ftpd/conf/VerboseLog
sudo echo yes > /etc/pure-ftpd/conf/DontResolve
sudo pure-pw mkdb
sudo service pure-ftpd restart
